            <!-- Section 5: Gemini API Feature -->
            <section id="gemini-feature" class="bg-white rounded-xl shadow-lg p-6 md:p-8">
                <h2 class="text-3xl font-bold mb-2 text-center" style="color: #118AB2;">âœ¨ Coba Terapkan Model Ini</h2>
