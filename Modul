    <script>
        const tooltipTitleCallback = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                              return label.join(' ');
                            }
                            return label;
                        }
                    }
                }
            }
        };

        // Chart 1: Engagement Chart (Donut)
        const ctxEngagement = document.getElementById('engagementChart').getContext('2d');
        new Chart(ctxEngagement, {
            type: 'doughnut',
            data: {
                labels: ['Siswa Pasif', 'Siswa Aktif'],
                datasets: [{
                    label: 'Keterlibatan Siswa',
                    data: [80, 20],
                    backgroundColor: ['#FF6B6B', '#06D6A0'],
                    borderColor: '#FFFFFF',
                    borderWidth: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: { legend: { position: 'bottom' }, tooltip: tooltipTitleCallback.plugins.tooltip }
            }
        });

        // Chart 2: Transformation Chart (Radar)
        const ctxTransformation = document.getElementById('transformationChart').getContext('2d');
        new Chart(ctxTransformation, {
            type: 'radar',
            data: {
                labels: ['Kepercayaan Diri', 'Kolaborasi', 'Diskusi Aktif', 'Tanggung Jawab', 'Pemahaman Materi'],
                datasets: [
                    {
                        label: 'Sebelum',
                        data: [3, 4, 2, 3, 5],
                        backgroundColor: 'rgba(255, 107, 107, 0.2)',
                        borderColor: '#FF6B6B',
                        pointBackgroundColor: '#FF6B6B',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#FF6B6B'
                    },
                    {
                        label: 'Sesudah',
                        data: [8, 9, 9, 8, 9],
                        backgroundColor: 'rgba(6, 214, 160, 0.2)',
                        borderColor: '#06D6A0',
                        pointBackgroundColor: '#06D6A0',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#06D6A0'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(7, 59, 76, 0.1)' },
                        grid: { color: 'rgba(7, 59, 76, 0.1)' },
                        pointLabels: { font: { size: 12, weight: 'bold' }, color: '#073B4C' },
                        ticks: { backdropColor: 'rgba(255, 255, 255, 0.75)', color: '#073B4C', stepSize: 2 },
                        suggestedMin: 0,
                        suggestedMax: 10
                    }
                },
                plugins: { legend: { position: 'top' }, tooltip: tooltipTitleCallback.plugins.tooltip }
            }
        });

        // Gemini API Feature
        const generateBtn = document.getElementById('generateBtn');
        const topicInput = document.getElementById('topicInput');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const geminiResult = document.getElementById('geminiResult');

        const generateLessonPlan = async () => {
            const topic = topicInput.value.trim();
            if (!topic) {
                geminiResult.innerHTML = `<div class="gemini-output" style="border-color: #FF6B6B;">Harap masukkan topik pelajaran terlebih dahulu.</div>`;
                return;
            }

            loadingIndicator.style.display = 'block';
            geminiResult.innerHTML = '';
            generateBtn.disabled = true;
            generateBtn.textContent = 'Memproses...';

            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
            
            const systemPrompt = `Anda adalah seorang ahli desain kurikulum yang inovatif. Tugas Anda adalah membuat ringkasan rencana pembelajaran (lesson plan) yang menarik dan praktis.`;
            const userQuery = `Buatkan draf rencana pembelajaran untuk topik "${topic}". Rencana ini harus secara spesifik menerapkan metode Project-Based Learning (PBL) dan Jigsaw yang berpusat pada siswa. Susun jawaban dalam format yang jelas dan mudah dibaca dengan poin-poin berikut:\n\n1.  **Tujuan Proyek Utama:** (Apa hasil akhir yang ingin dicapai siswa?)\n2.  **Pembagian Tim 'Ahli' (Jigsaw):** (Sebutkan 3-4 sub-topik yang bisa didalami oleh tim-tim ahli)\n3.  **Langkah-langkah Kolaborasi:** (Jelaskan alur kerja siswa dari tim ahli ke tim proyek)\n4.  **Ide Proyek Akhir:** (Berikan 2-3 ide bentuk proyek akhir yang kreatif)`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API request failed with status ${response.status}`);
                }

                const result = await response.json();
                const candidate = result.candidates?.[0];

                if (candidate && candidate.content?.parts?.[0]?.text) {
                    const generatedText = candidate.content.parts[0].text;
                    geminiResult.innerHTML = `<div class="gemini-output">${generatedText}</div>`;
                } else {
                    throw new Error("Respons dari API tidak valid.");
                }

            } catch (error) {
                console.error("Error calling Gemini API:", error);
                geminiResult.innerHTML = `<div class="gemini-output" style="border-color: #FF6B6B;">Maaf, terjadi kesalahan saat membuat rencana. Silakan coba lagi.</div>`;
            } finally {
                loadingIndicator.style.display = 'none';
                generateBtn.disabled = false;
                generateBtn.textContent = 'Buat Rencana!';
            }
        };

        generateBtn.addEventListener('click', generateLessonPlan);
        topicInput.addEventListener('keyup', (event) => {
            if (event.key === 'Enter') {
                generateLessonPlan();
            }
        });
    </script>
</body>
